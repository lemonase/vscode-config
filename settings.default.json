{
  //* VSCODE GENERAL SETTINGS *//

  // Workbench
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.enableExperiments": false,
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.location": "top",
  "workbench.editor.defaultBinaryEditor": "hexEditor.hexedit",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.key": "default"
  },

  // Window
  "window.menuBarVisibility": "classic",
  "window.titleSeparator": " : ",
  "window.commandCenter": false,

  // Files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoGuessEncoding": true,
  "files.eol": "auto",
  // Exclude Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // Editor
  "editor.autoIndent": "full",
  "editor.fontLigatures": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.parameterHints.cycle": true,
  "editor.renderControlCharacters": true,
  "editor.renderFinalNewline": "on",
  "editor.renderWhitespace": "selection",
  "editor.wordWrap": "on",
  "editor.rulers": [80, 120],
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  "editor.linkedEditing": true,
  "editor.suggest.showStatusBar": true,
  "editor.guides.indentation": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.preview": true,
  "editor.stickyScroll.enabled": true,
  "editor.fontFamily": "'Cascadia Code', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 12,
  "diffEditor.codeLens": true,

  // Explorer
  "explorer.autoReveal": true,
  "explorer.confirmDelete": false,
  "explorer.incrementalNaming": "smart",
  "explorer.autoRevealExclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },

  // Terminal
  "terminal.explorerKind": "integrated",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.sendKeybindingsToShell": true,

  // Git Integration
  "git.autofetch": false,
  "git.autorefresh": true,
  "git.confirmSync": true,
  "git.allowForcePush": true,
  "git.enableStatusBarSync": true,
  "git.showInlineOpenFileAction": true,
  "git.enableSmartCommit": true,
  "git.followTagsWhenSync": true,
  "git.mergeEditor": true,
  "git.pullBeforeCheckout": true,
  "git.showPushSuccessNotification": true,
  "git.timeline.showUncommitted": true,

  // ------------------------
  // Language Editor/Formatting Settings
  // ------------------------
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Emmet Settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // ---------------------------
  // Language Extension Settings
  // ---------------------------
  // Python
  "python.showStartPage": false,
  // PowerShell
  "powershell.integratedConsole.showOnStartup": false,
  // Go
  "go.formatTool": "goimports",
  "go.lintTool": "golint",
  "go.useLanguageServer": true,
  // Ruby
  "ruby.useLanguageServer": true,

  // ---------------------------
  // General Extension Settings
  // ---------------------------
  // Vim Extension
  "vim.autoindent": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  // "vim.smartRelativeLine": true,
  "vim.handleKeys": {
    "<C-b>": true,
    "<C-f>": true,
    "<C-k>": false,
    "<C-e>": true,
    "<C-n>": true,
    "<C-p>": true
  },
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", ":"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "a", "f"],
      "commands": ["editor.action.format"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q"]
    }
  ],

  "todo-tree.general.showIconsInsteadOfTagsInStatusBar": false,
  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "DONE",
    "[ ]",
    "[x]",
    "[~]",
    "[.]"
  ],
  "todo-tree.highlights.backgroundColourScheme": [
    // BUG
    "firebrick",
    // HACK
    "orange",
    // FIXME
    "yellow",
    // TODO
    "firebrick",
    // XXX
    "cornflowerblue",
    // DONE
    "71bd78",
    /// [ ]
    "firebrick",
    /// [x]
    "71bd78",
    /// [~]
    "cornflowerblue",
    /// [.]
    "cornflowerblue"
  ],

  // Hex Editor Settings
  "hexeditor.columnWidth": 16,
  "hexeditor.showDecodedText": true,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",

  // Telemetry Settings
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",
  "telemetry.feedback.enabled": false,
  "intelephense.telemetry.enabled": false,
  "redhat.telemetry.enabled": false,

  // Editor Changes from GUI
  "workbench.colorTheme": "GitHub Dark Default"
}
